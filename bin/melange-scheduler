from apscheduler.scheduler import Scheduler
from melange.common import config
from melange.ipam.models import IpBlock, models
from melange.db import session
from time import sleep

class ScheduledJobs(object):

    def __init__(self):
        self.scheduler = Scheduler()

    def start(self):
        self.scheduler.daemonic = False
        self.scheduler.start()
        self.scheduler.add_interval_job(
            IpBlock.delete_all_deallocated_ips, seconds=5)

    def stop(self):
        self.scheduler.shutdown(0)

def _configure_session(conf):
    conf["models"] = models()
    session.configure_db(conf)
    session.configure_sqlalchemy_log(conf)
    

if __name__ == '__main__':
    try:
        conf, app = config.load_paste_app('melange', {}, [])
        _configure_session(conf)
        scheduled_jobs = ScheduledJobs()
        scheduled_jobs.start()
    except RuntimeError, e:
        sys.exit("ERROR: %s" % e)
