import logging
from melange.common import config
from melange.ipam.models import IpBlock, models
from melange.db import session


def _configure_db_session(conf):
    conf["models"] = models()
    session.configure_db(conf)
    session.configure_sqlalchemy_log(conf)

def _load_app_environment():
    conf_file, conf = config.load_paste_config('melange', {}, [])
    config.setup_logging(options={}, conf=conf)
    _configure_db_session(conf)
    

if __name__ == '__main__':
    try:
        _load_app_environment()
        IpBlock.delete_all_deallocated_ips()
    except RuntimeError, e:
        sys.exit("ERROR: %s" % e)
